<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/splash_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/splash_trueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="60dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_wiki_title_cn"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splash_wikiIcon"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/splash_Title"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/splash_trueWikiIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/ic_wiki_icon" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
