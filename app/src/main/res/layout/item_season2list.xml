<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/item_season2List_storyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:id="@+id/item_season2List_story_img_iv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/ic_season2_storymode"/>
            <TextView
                android:id="@+id/item_season2List_story_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/season2StotyModeTitle"
                android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/item_season2List_challengeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:id="@+id/item_season2List_challenge_img_iv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/ic_season2_challengemode"/>
            <TextView
                android:id="@+id/item_season2List_challenge_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/season2ChallengeModeTitle"
                android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

